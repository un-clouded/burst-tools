
hidden()
  display  none


fullscreen()
  width  100%
  height 100%
  position  absolute
  top  0
  left  0


in_the_background()
  z-index  -99


in_the_middle( width, height)
  width  width
  height  height
  position  absolute
  top  50%
  left  50%
  margin-top  (- height/2)
  margin-left  (- width/2)


#button
  // The button should appear in the middle of the viewport
  size = 7em
  in_the_middle  size  size
  border-radius  (size/2)
  font-size  1.2em


#input
  hidden()
  max-width  40em
  margin  0 auto
  textarea
    width  100%
    height  5em


#canvas_box
  canvas
    display  none
    fullscreen()
    in_the_background()   // The canvas should be behind everything else

